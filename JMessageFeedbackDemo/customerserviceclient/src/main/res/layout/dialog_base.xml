<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dialog_base_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="260dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal"
              android:background="@drawable/dialog_default_style"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_base_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/dialog_base_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_normal_size"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/dialog_base_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/dialog_bottom_btn_bg"
            android:text="确定"
            android:textColor="#000000"
            />

    </LinearLayout>

</LinearLayout>
